{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "importHelpers": false,
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}
